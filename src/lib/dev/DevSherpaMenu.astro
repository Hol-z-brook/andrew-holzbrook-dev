---
import { sherpaSections, type SherpaSection, type SherpaItem } from './DevSherpaSections';
import DraggableMenu from './DraggableMenu.astro';
---

<DraggableMenu id="dev-sherpa-menu" title="Dev Sherpa Menu">
  <div class="space-y-4">
    {
      sherpaSections.map((section: SherpaSection) => (
        <div>
          <h4 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">{section.label}</h4>
          <div class="space-y-1">
            {section.items.map((item: SherpaItem) => (
              <a
                href={item.href}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors"
                data-astro-prefetch
              >
                {item.label}
              </a>
            ))}
            {section.sections?.map((subSection: SherpaSection) => (
              <div class="ml-4">
                <h5 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">
                  {subSection.label}
                </h5>
                <div class="space-y-1">
                  {subSection.items.map((item: SherpaItem) => (
                    <a
                      href={item.href}
                      class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors"
                      data-astro-prefetch
                    >
                      {item.label}
                    </a>
                  ))}
                  {subSection.sections?.map((subSubSection: SherpaSection) => (
                    <div class="ml-4">
                      <h6 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">
                        {subSubSection.label}
                      </h6>
                      <div class="space-y-1">
                        {subSubSection.items.map((item: SherpaItem) => (
                          <a
                            href={item.href}
                            class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors"
                            data-astro-prefetch
                          >
                            {item.label}
                          </a>
                        ))}
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</DraggableMenu>
