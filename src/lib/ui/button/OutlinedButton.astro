---
interface Props {
  radius: string;
}

const { radius } = Astro.props;
---

<button
  class="h-8 bg-white border-2 border-primary-300 flex items-center justify-center px-3 text-xs font-medium text-primary-700 shadow-sm hover:border-primary-400 transition-colors"
  style={`border-radius: ${radius}`}
>
  Outlined Button
</button>
