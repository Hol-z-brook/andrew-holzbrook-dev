---
interface Props {
  variant?: 'primary' | 'outlined';
  radius?: string;
  class?: string;
}

const { variant = 'primary', radius = '4px', class: className = '' } = Astro.props;

const baseStyles =
  'h-8 flex items-center justify-center px-3 text-xs font-medium shadow-sm transition-colors';

const variantStyles = {
  primary: 'bg-primary-500 text-white hover:bg-primary-600',
  outlined: 'bg-white border-2 border-primary-300 text-primary-700 hover:border-primary-400',
};
---

<button
  class={`${baseStyles} ${variantStyles[variant]} ${className}`}
  style={`border-radius: ${radius}`}
>
  <slot />
</button>
