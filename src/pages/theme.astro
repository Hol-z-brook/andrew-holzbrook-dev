---
import AppPage from "./_app/_AppPage.astro";
import AppPageBody from "./_app/_AppPageBody.astro";
import AppPageHeader from "./_app/_AppPageHeader.astro";
import AppPageSection from "./_app/_AppPageSection.astro";
import PrimaryButton from "../components/theme/PrimaryButton.astro";
import OutlinedButton from "../components/theme/OutlinedButton.astro";
import ThemeSection from "../components/theme/ThemeSection.astro";
import ThemeSectionHeader from "../components/theme/ThemeSectionHeader.astro";
import ThemeSectionBody from "../components/theme/ThemeSectionBody.astro";
import { theme } from "../theme";

const colorScales = Object.entries(theme.colors).filter(([_, value]) => 
  typeof value === 'object'
);
const singleColors = Object.entries(theme.colors).filter(([_, value]) => 
  typeof value === 'string'
);
---

<AppPage>
  <AppPageHeader />
  <AppPageBody class="bg-gray-50">
    <AppPageSection>
      <div class="max-w-6xl mx-auto py-16 px-6">
        <!-- Header -->
        <section class="mb-16">
          <h2 class="text-4xl font-bold mb-6">Theme Showcase</h2>
          <p class="text-xl text-gray-600 max-w-2xl">
            A comprehensive demonstration of all theme elements used in the design system.
          </p>
        </section>

        <div class="space-y-16">
          <!-- Color Scales -->
          <ThemeSection>
            <ThemeSectionHeader title="Color Scales" />
            <ThemeSectionBody class="grid grid-cols-1 md:grid-cols-2 gap-12">
              {colorScales.map(([name, scale]) => (
                <div class="space-y-4">
                  <h4 class="text-xl font-medium capitalize">{name}</h4>
                  <div class="grid grid-cols-10 gap-2">
                    {Object.entries(scale).map(([shade, color]) => (
                      <div class="space-y-2">
                        <div 
                          class="h-16 rounded-md shadow-sm" 
                          style={`background-color: ${color}`}
                        />
                        <div class="text-xs text-center font-medium">{shade}</div>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Single Colors -->
          <ThemeSection>
            <ThemeSectionHeader title="Base Colors" />
            <ThemeSectionBody class="grid grid-cols-2 md:grid-cols-4 gap-8">
              {singleColors.map(([name, color]) => (
                <div class="space-y-3">
                  <div 
                    class="h-24 rounded-lg shadow-md" 
                    style={`background-color: ${color}`}
                  />
                  <div class="text-sm font-medium capitalize">{name}</div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Gradients -->
          <ThemeSection>
            <ThemeSectionHeader title="Gradients" />
            <ThemeSectionBody class="grid grid-cols-1 md:grid-cols-2 gap-12">
              {Object.entries(theme.gradients).map(([name, gradient]) => (
                <div class="space-y-4">
                  <h4 class="text-xl font-medium capitalize">{name}</h4>
                  <div 
                    class="h-32 rounded-lg shadow-md" 
                    style={`background: linear-gradient(to right, ${gradient.start}, ${gradient.mid1}, ${gradient.mid2}, ${gradient.end})`}
                  />
                  <div class="grid grid-cols-4 gap-4">
                    {Object.entries(gradient).map(([position, color]) => (
                      <div class="text-sm">
                        <div class="font-medium capitalize">{position}</div>
                        <div class="text-gray-500 mt-1">{color}</div>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Typography -->
          <ThemeSection>
            <ThemeSectionHeader title="Typography" />
            <ThemeSectionBody class="space-y-16">
              <!-- Font Sizes -->
              <div>
                <h4 class="text-xl font-medium mb-6">Font Sizes</h4>
                <div class="space-y-6">
                  {Object.entries(theme.fontSizes).map(([name, size]) => (
                    <div class="flex items-baseline gap-8">
                      <div class="w-24 text-sm font-medium text-gray-500">{name}</div>
                      <div style={`font-size: ${size}`}>
                        The quick brown fox jumps over the lazy dog
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Font Weights -->
              <div>
                <h4 class="text-xl font-medium mb-6">Font Weights</h4>
                <div class="space-y-6">
                  {Object.entries(theme.fontWeights).map(([name, weight]) => (
                    <div class="flex items-center gap-8">
                      <div class="w-24 text-sm font-medium text-gray-500">{name}</div>
                      <div style={`font-weight: ${weight}`}>
                        The quick brown fox jumps over the lazy dog
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Spacing -->
          <ThemeSection>
            <ThemeSectionHeader title="Spacing" />
            <ThemeSectionBody class="space-y-6">
              {Object.entries(theme.spacing).map(([name, space]) => (
                <div class="flex items-center gap-8">
                  <div class="w-24 text-sm font-medium text-gray-500">{name}</div>
                  <div 
                    class="bg-primary-200 rounded"
                    style={`width: ${space}; height: 32px`}
                  />
                  <div class="text-sm text-gray-500">{space}</div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Border Radius -->
          <ThemeSection>
            <ThemeSectionHeader title="Border Radius" />
            <ThemeSectionBody class="grid grid-cols-2 md:grid-cols-4 gap-8">
              {Object.entries(theme.borderRadius).map(([name, radius]) => (
                <div class="space-y-4 group">
                  <div class="relative">
                    <div 
                      class="h-32 bg-gradient-to-br from-primary-200 to-primary-300 group-hover:scale-95 transition-transform"
                      style={`border-radius: ${radius}`}
                    />
                    <div 
                      class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center bg-black/20 text-white font-medium"
                      style={`border-radius: ${radius}`}
                    >
                      {radius}
                    </div>
                  </div>
                  <div class="space-y-1">
                    <div class="text-sm font-medium capitalize">{name}</div>
                    <div class="text-xs text-gray-500 font-mono">{radius}</div>
                  </div>
                  <div class="space-y-2">
                    <PrimaryButton radius={radius} />
                    <OutlinedButton radius={radius} />
                  </div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Shadows -->
          <ThemeSection>
            <ThemeSectionHeader title="Shadows" />
            <ThemeSectionBody class="grid grid-cols-2 md:grid-cols-3 gap-12">
              {Object.entries(theme.shadows).map(([name, shadow]) => (
                <div class="space-y-3">
                  <div 
                    class="h-32 bg-white rounded-lg"
                    style={`box-shadow: ${shadow}`}
                  />
                  <div class="text-sm font-medium">{name}</div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Transitions -->
          <ThemeSection>
            <ThemeSectionHeader title="Transitions" />
            <ThemeSectionBody class="grid grid-cols-1 md:grid-cols-3 gap-12">
              {Object.entries(theme.transitions).map(([name, transition]) => (
                <div class="space-y-3">
                  <button 
                    class="w-full py-4 px-6 bg-primary-200 rounded-lg hover:scale-105"
                    style={`transition: transform ${transition}`}
                  >
                    Hover me
                  </button>
                  <div class="text-sm font-medium">{name}</div>
                  <div class="text-sm text-gray-500">{transition}</div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>
        </div>
      </div>
    </AppPageSection>
  </AppPageBody>
</AppPage> 