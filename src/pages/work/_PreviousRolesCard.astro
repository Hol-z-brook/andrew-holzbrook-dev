---
import Card from "../../lib/ui/Card.astro";

type Role = {
    title: string;
    company: string;
    description: string;
    startDate: string;
    endDate: string;
};

const roles: Role[] = [
    {
        title: "Senior Software Engineer",
        company: "MasterControl",
        startDate: "2013",
        endDate: "2018",
        description:
            "Led backend and frontend development efforts for several projects using React, Node.js, and MongoDB. Mentored junior engineers and helped improve system performance.",
    },
    {
        title: "Software Engineer",
        company: "Triview",
        startDate: "2013",
        endDate: "2018",
        description:
            "Developed and maintained client-facing applications with AngularJS and ColdFusion. Improved app reliability and scalability.",
    },
    {
        title: "Junior Developer",
        company: "Chatbooks",
        startDate: "2013",
        endDate: "2018",
        description:
            "Worked on migrating legacy WordPress systems to modern React/Next.js applications and contributed to the redesign of the platform.",
    },
];
---

<Card>
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Previous Roles</h1>
    <div class="space-y-6">
        {
            roles.map((role) => (
                <div class="border p-6 rounded-lg shadow-md bg-white">
                    <h2 class="text-xl font-semibold text-gray-700">
                        {role.title}
                    </h2>
                    <h3 class="text-lg text-gray-500">{role.company}</h3>
                    <p class="mt-2 text-sm text-gray-500">
                        {role.startDate} - {role.endDate}
                    </p>
                    <p class="mt-4 text-gray-600">{role.description}</p>
                </div>
            ))
        }
    </div>
</Card>
