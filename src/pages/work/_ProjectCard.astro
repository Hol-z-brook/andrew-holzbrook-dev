---
interface Props {
  name: string;
  description: string;
  tech: string[];
  class?: string;
}

const { name, description, tech, class: className = '' } = Astro.props;
---

<div class={`
  bg-white
  rounded-lg
  shadow-md
  p-6
  space-y-4
  ${className}
`}>
  <h3 class={`
    text-lg
    sm:text-xl
    font-semibold
    text-gray-900
  `}>
    {name}
  </h3>
  <p class={`
    text-gray-700
  `}>
    {description}
  </p>
  <div class={`
    flex
    flex-wrap
    gap-2
  `}>
    {tech.map((tech) => (
      <span class={`
        bg-gray-100
        text-gray-700
        text-sm
        px-3
        py-1
        rounded-full
      `}>
        {tech}
      </span>
    ))}
  </div>
</div>
