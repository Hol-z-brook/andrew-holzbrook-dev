---
interface Props {
  name: string;
  icon: string;
  description: string;
  class?: string;
}

const { name, icon, description, class: className = '' } = Astro.props;
---

<div class={`
  bg-white
  rounded-lg
  shadow-md
  p-6
  space-y-4
  ${className}
`}>
  <div class="flex items-center space-x-4">
    <span class={`
      text-2xl
      text-gray-700
    `}>
      {icon}
    </span>
    <h3 class={`
      text-lg
      font-semibold
      text-gray-900
    `}>
      {name}
    </h3>
  </div>
  <p class={`
    text-gray-700
  `}>
    {description}
  </p>
</div>
