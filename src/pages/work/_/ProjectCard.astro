---
import { H3, P } from '../../../lib/ui';

interface Props {
  name: string;
  description: string;
  tech: string[];
  class?: string;
}

const { name, description, tech, class: className } = Astro.props;
---

<div
  class:list={[
    'bg-white rounded-lg shadow-md p-6 space-y-4 hover:shadow-lg transition-shadow',
    className,
  ]}
>
  <H3 class="text-lg sm:text-xl font-semibold text-gray-900">{name}</H3>

  <P class="text-gray-700">{description}</P>

  <div class="flex flex-wrap gap-2">
    {
      tech.map(tech => (
        <div class="bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-full">{tech}</div>
      ))
    }
  </div>
</div>
