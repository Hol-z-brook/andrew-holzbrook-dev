---
import { Card } from '../../../lib/ui';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<Card
  class:list={[
    'aspect-[8.5/11] bg-white shadow-lg hover:shadow-2xl rounded-lg border border-gray-200',
    'overflow-hidden transition-all duration-500',
    'transform rotate-[-3deg] hover:rotate-0 hover:scale-105',
    className,
  ]}
>
  <div class="space-y-2 sm:space-y-3">
    <div class="w-2/3 sm:w-3/4 h-4 sm:h-5 bg-gray-300 rounded"></div>
    <div class="w-1/3 sm:w-1/2 h-2 sm:h-3 bg-gray-200 rounded"></div>

    <div class="pt-4 sm:pt-6 space-y-1 sm:space-y-2">
      <div class="w-1/4 sm:w-1/3 h-3 sm:h-4 bg-gray-300 rounded"></div>
      <div class="w-full h-0.5 bg-gray-200 rounded mb-1 sm:mb-2"></div>

      <div class="space-y-2">
        <div class="w-2/3 sm:w-3/4 h-2 sm:h-3 bg-gray-200 rounded"></div>
        <div class="w-1/3 sm:w-1/2 h-2 sm:h-3 bg-gray-200 rounded"></div>
        <div class="w-3/4 sm:w-full h-2 bg-gray-200 rounded"></div>
        <div class="w-2/3 sm:w-5/6 h-2 bg-gray-200 rounded"></div>
        <div class="w-1/2 sm:w-2/3 h-2 bg-gray-200 rounded"></div>
      </div>
    </div>

    <div class="pt-4 sm:pt-6 space-y-1 sm:space-y-2">
      <div class="w-1/4 sm:w-1/3 h-3 sm:h-4 bg-gray-300 rounded"></div>
      <div class="w-full h-0.5 bg-gray-200 rounded mb-1 sm:mb-2"></div>

      <div class="space-y-2">
        <div class="w-3/4 h-3 bg-gray-200 rounded"></div>
        <div class="w-4/6 h-2 bg-gray-200 rounded"></div>
        <div class="w-1/2 h-3 bg-gray-200 rounded"></div>
        <div class="w-4/6 h-2 bg-gray-200 rounded"></div>
      </div>
    </div>

    <div class="pt-4 sm:pt-6 space-y-1 sm:space-y-2">
      <div class="w-1/4 sm:w-1/3 h-3 sm:h-4 bg-gray-300 rounded"></div>
      <div class="w-full h-0.5 bg-gray-200 rounded mb-1 sm:mb-2"></div>

      <div class="space-y-2">
        <div class="w-1/2 h-3 bg-gray-200 rounded"></div>
        <div class="w-4/6 h-2 bg-gray-200 rounded"></div>
      </div>
    </div>
  </div>
</Card>
