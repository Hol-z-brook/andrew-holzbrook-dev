---
import AppPage from "../../_app/_AppPage.astro";
import AppPageBody from "../../_app/_AppPageBody.astro";
import PrintButton from "./_PrintButton.astro";
import ResumeContent from "./_ResumeContent.astro";
---

<AppPage backgroundColor="bg-gray-100 print:bg-white">
  <div class="flex flex-col items-center">
    <PrintButton class="print:hidden m-4">
      Print
    </PrintButton>

    <AppPageBody
      class="mx-auto max-w-[8.5in] m-2 sm:m-4 text-xs sm:text-sm leading-relaxed font-inter py-2 sm:py-4 px-2 sm:px-8 md:px-12 shadow-md print:shadow-none bg-white"
    >
      <ResumeContent />
    </AppPageBody>
  </div>
</AppPage>
