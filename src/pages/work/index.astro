---
import PageUI from './_ui';
import PageData from './_data';
import App from '../../lib/app';
import Sherpa from '../../lib/sherpa';
import UI from '../../lib/ui';

const sherpa = Sherpa.makeSherpa();
const resumeUrl = sherpa.work.resume({});
---

<PageUI.Page>
  <App.PageHeader />

  <App.PageBody
    backgroundColor="bg-gray-100"
    class={`
      flex
      flex-col
      min-h-screen
    `}
  >
    <App.PageHero
      title="My Career"
      subtitle="When work is play, you'll never play another day in your life."
      class="w-full"
    />

    <App.PageSection
      class={`
        w-full
        py-12
        sm:py-16
        md:py-20
        space-y-32
      `}
    >
      <UI.Layout.Flex.VStack
        class={`
          gap-8
        `}
      >
        <PageUI.PageSection.Container>
          <PageUI.PageSection.Title>Work Experience</PageUI.PageSection.Title>
          {
            PageData.andrewHolbrookCandidate.workExperience.map(job => (
              <PageUI.ExperienceCard {...job} />
            ))
          }
        </PageUI.PageSection.Container>

        <PageUI.PageSection.Container>
          <PageUI.PageSection.Title>Projects</PageUI.PageSection.Title>
          <PageUI.PageSection.Grid>
            {
              PageData.andrewHolbrookCandidate.projects.map(project => (
                <PageUI.ProjectCard {...project} />
              ))
            }
          </PageUI.PageSection.Grid>
        </PageUI.PageSection.Container>

        <UI.Layout.Flex.VStack class="gap-16">
          <PageUI.PageSection.Container>
            <PageUI.PageSection.Title>Core Proficiencies</PageUI.PageSection.Title>
            <PageUI.PageSection.Grid>
              {
                PageData.andrewHolbrookCandidate.coreProficiencies.map(skill => (
                  <PageUI.SkillCard {...skill} />
                ))
              }
            </PageUI.PageSection.Grid>
          </PageUI.PageSection.Container>

          <PageUI.PageSection.Container>
            <PageUI.PageSection.Title>Technical Skills</PageUI.PageSection.Title>
            <PageUI.PageSection.Grid>
              {
                PageData.andrewHolbrookCandidate.skillCategories.map(category => (
                  <PageUI.SkillCategoryCard {...category} />
                ))
              }
            </PageUI.PageSection.Grid>
          </PageUI.PageSection.Container>
        </UI.Layout.Flex.VStack>

        <PageUI.PageSection.Container>
          <PageUI.PageSection.Title>Resume</PageUI.PageSection.Title>
          <UI.Layout.Flex.Center>
            <App.Link
              class={`
                w-3/4
                xs:w-3/4
                sm:w-2/3
                md:w-1/2
              `}
              href={resumeUrl}
              target="_blank"
            >
              <PageUI.ResumeSkeleton />
            </App.Link>
          </UI.Layout.Flex.Center>
        </PageUI.PageSection.Container>
      </UI.Layout.Flex.VStack>
    </App.PageSection>
    <App.PageFooter />
  </App.PageBody>
</PageUI.Page>
