import PageUI from './_ui';
import PageData from './_data';
import App from '../../lib/app';
import Sherpa from '../../lib/sherpa';
import UI from '../../lib/ui';

/*
TODO: Modern Design Elements
[ ] Implement dark mode toggle - Add theme provider and toggle component
[ ] Add glass morphism effects - Create reusable glass effect styles
*/

const sherpa = Sherpa.makeSherpa();
const resumeUrl = sherpa.work.resume({});
---

<PageUI.Page>
  {
    /* TODO: Performance & Accessibility
    [ ] Add keyboard navigation
    [ ] Implement proper ARIA labels
    */
  }
  <App.PageHeader />

  <App.PageBody
    backgroundColor="bg-gray-100"
    class={`
      flex
      flex-col
      min-h-screen
    `}
  >
    {
      /* TODO: Hero Section Enhancements
      [ ] Add dynamic background (gradient animation)
      [ ] Include geometric shapes or professional photo
      [ ] Implement particle.js background
      [ ] Add subtle scroll-triggered animations
      */
    }
    <App.PageHero
      title="My Career"
      subtitle="When work is play, you'll never play another day in your life."
      class="w-full"
    />

    {
      /* TODO: Interactive Elements
      [ ] Add smooth section scrolling
      [ ] Implement floating navigation
      [ ] Add progress indicators
      */
    }
    <App.PageSection
      class={`
        w-full
        py-12
        sm:py-16
        md:py-20
        space-y-32
      `}
    >
      {
        /* TODO: Visual Hierarchy
        [ ] Develop distinct color scheme palette
        [ ] Enhance typography scale
        [ ] Add section dividers/decorative elements
        [ ] Improve spacing and rhythm
        */
      }
      <UI.Layout.VStack
        class={`
          gap-8
        `}
      >
        <PageUI.PageSection.Container>
          {
            /* TODO: Card Layout Improvements
            [ ] Add staggered animation on card entry
            [ ] Enhance hover effects with 3D transforms
            [ ] Add border gradients to cards
            */
          }
          <PageUI.PageSection.Title>Work Experience</PageUI.PageSection.Title>
          {
            PageData.andrewHolbrookCandidate.workExperience.map(job => (
              <PageUI.ExperienceCard {...job} />
            ))
          }
        </PageUI.PageSection.Container>

        <PageUI.PageSection.Container>
          <PageUI.PageSection.Title>Projects</PageUI.PageSection.Title>
          {
            /* TODO: Card Layout Improvements
            [ ] Implement masonry layout for projects
            */
          }
          <PageUI.PageSection.Grid>
            {
              PageData.andrewHolbrookCandidate.projects.map(project => (
                <PageUI.ProjectCard {...project} />
              ))
            }
          </PageUI.PageSection.Grid>
        </PageUI.PageSection.Container>

        <UI.Layout.VStack class="gap-16">
          <PageUI.PageSection.Container>
            <PageUI.PageSection.Title>Core Proficiencies</PageUI.PageSection.Title>
            <PageUI.PageSection.Grid>
              {
                PageData.andrewHolbrookCandidate.coreProficiencies.map(skill => (
                  <PageUI.SkillCard {...skill} />
                ))
              }
            </PageUI.PageSection.Grid>
          </PageUI.PageSection.Container>

          <PageUI.PageSection.Container>
            <PageUI.PageSection.Title>Technical Skills</PageUI.PageSection.Title>
            {
              /* TODO: Interactive Elements
              [ ] Enhance skill tag interactions
              */
            }
            <PageUI.PageSection.Grid>
              {
                PageData.andrewHolbrookCandidate.skillCategories.map(category => (
                  <PageUI.SkillCategoryCard {...category} />
                ))
              }
            </PageUI.PageSection.Grid>
          </PageUI.PageSection.Container>
        </UI.Layout.VStack>

        <PageUI.PageSection.Container>
          <PageUI.PageSection.Title>Resume</PageUI.PageSection.Title>
          <UI.Layout.Center>
            <App.Link
              class={`
                w-3/4
                xs:w-3/4
                sm:w-2/3
                md:w-1/2
              `}
              href={resumeUrl}
              target="_blank"
            >
              <PageUI.ResumeSkeleton />
            </App.Link>
          </UI.Layout.Center>
        </PageUI.PageSection.Container>
      </UI.Layout.VStack>
    </App.PageSection>

    {
      /* TODO: Performance & Accessibility
      [ ] Optimize animations for reduced motion
      [ ] Ensure WCAG 2.1 compliance
      */
    }
    <App.PageFooter />
  </App.PageBody>
</PageUI.Page>
