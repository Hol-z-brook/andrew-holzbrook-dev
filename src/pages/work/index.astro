---
import WorkPageData from './_data';
import WorkPageUI from './_ui';
import App from '../../lib/app';
import Sherpa from '../../lib/sherpa';
import { Center, PageHero, VStack } from '../../lib/ui';

const sherpa = Sherpa.makeSherpa();
const resumeUrl = sherpa.work.resume({});
---

<WorkPageUI.Page>
  <App.PageBody
    backgroundColor="bg-gray-100"
    class={`
      flex
      flex-col
      min-h-screen
    `}
  >
    <PageHero
      title="My Career"
      subtitle="When work is play, you'll never play another day in your life."
      class="w-full"
    />

    <App.PageSection
      class={`
        w-full
        py-12
        sm:py-16
        md:py-20
        space-y-32
      `}
    >
      <VStack
        class={`
          gap-8
        `}
      >
        <WorkPageUI.PageSection.Container>
          <WorkPageUI.PageSection.Title>Work Experience</WorkPageUI.PageSection.Title>
          {
            WorkPageData.andrewHolbrookCandidate.workExperience.map(job => (
              <WorkPageUI.ExperienceCard {...job} />
            ))
          }
        </WorkPageUI.PageSection.Container>

        <WorkPageUI.PageSection.Container>
          <WorkPageUI.PageSection.Title>Projects</WorkPageUI.PageSection.Title>
          <WorkPageUI.PageSection.Grid>
            {
              WorkPageData.andrewHolbrookCandidate.projects.map(project => (
                <WorkPageUI.ProjectCard {...project} />
              ))
            }
          </WorkPageUI.PageSection.Grid>
        </WorkPageUI.PageSection.Container>

        <VStack class="gap-16">
          <WorkPageUI.PageSection.Container>
            <WorkPageUI.PageSection.Title>Core Proficiencies</WorkPageUI.PageSection.Title>
            <WorkPageUI.PageSection.Grid>
              {
                WorkPageData.andrewHolbrookCandidate.coreProficiencies.map(skill => (
                  <WorkPageUI.SkillCard {...skill} />
                ))
              }
            </WorkPageUI.PageSection.Grid>
          </WorkPageUI.PageSection.Container>

          <WorkPageUI.PageSection.Container>
            <WorkPageUI.PageSection.Title>Technical Skills</WorkPageUI.PageSection.Title>
            <WorkPageUI.PageSection.Grid>
              {
                WorkPageData.andrewHolbrookCandidate.skillCategories.map(category => (
                  <WorkPageUI.SkillCategoryCard {...category} />
                ))
              }
            </WorkPageUI.PageSection.Grid>
          </WorkPageUI.PageSection.Container>
        </VStack>

        <WorkPageUI.PageSection.Container>
          <WorkPageUI.PageSection.Title>Resume</WorkPageUI.PageSection.Title>
          <Center>
            <App.Link
              class={`
                w-3/4
                xs:w-3/4
                sm:w-2/3
                md:w-1/2
              `}
              href={resumeUrl}
              target="_blank"
            >
              <WorkPageUI.ResumeSkeleton />
            </App.Link>
          </Center>
        </WorkPageUI.PageSection.Container>
      </VStack>
    </App.PageSection>
    <App.PageFooter />
  </App.PageBody>
</WorkPageUI.Page>
