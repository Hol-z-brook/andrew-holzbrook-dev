---
import { Center, PageHero, VStack } from '../../lib/ui';
import App from '../../lib/app';
import Sherpa from '../../lib/sherpa';
import { pageData } from './_/data';
import ExperienceCard from './_/ExperienceCard.astro';
import ProjectCard from './_/ProjectCard.astro';
import ResumeSkeleton from './_/ResumeSkeleton.astro';
import SkillCard from './_/SkillCard.astro';
import SkillCategoryCard from './_/SkillCategoryCard.astro';
import WorkPage from './_/WorkPage.astro';
import WorkPageSection from './_/WorkPageSection';

const sherpa = Sherpa.makeSherpa();
---

<WorkPage>
  <App.PageBody
    backgroundColor="bg-gray-100"
    class={`
      flex
      flex-col
      min-h-screen
    `}
  >
    <PageHero
      title="My Career"
      subtitle="When work is play, you'll never play another day in your life."
      class="w-full"
    />

    <App.PageSection
      class={`
        w-full
        py-12
        sm:py-16
        md:py-20
        space-y-32
      `}
    >
      <VStack
        class={`
          gap-8
        `}
      >
        <WorkPageSection.Container>
          <WorkPageSection.Title>Work Experience</WorkPageSection.Title>
          {pageData.candidate.workExperience.map(job => <ExperienceCard {...job} />)}
        </WorkPageSection.Container>

        <WorkPageSection.Container>
          <WorkPageSection.Title>Projects</WorkPageSection.Title>
          <WorkPageSection.Grid>
            {pageData.candidate.projects.map(project => <ProjectCard {...project} />)}
          </WorkPageSection.Grid>
        </WorkPageSection.Container>

        <WorkPageSection.Container>
          <WorkPageSection.Title>Core Proficiencies</WorkPageSection.Title>
          <WorkPageSection.Grid>
            {pageData.candidate.coreProficiencies.map(skill => <SkillCard {...skill} />)}
          </WorkPageSection.Grid>
        </WorkPageSection.Container>

        <WorkPageSection.Container>
          <WorkPageSection.Title>Technical Skills</WorkPageSection.Title>
          <WorkPageSection.Grid>
            {
              pageData.candidate.skillCategories.map(category => (
                <SkillCategoryCard {...category} skills={pageData.candidate.skills} />
              ))
            }
          </WorkPageSection.Grid>
        </WorkPageSection.Container>

        <WorkPageSection.Container>
          <WorkPageSection.Title>Resume</WorkPageSection.Title>
          <Center>
            <App.Link
              class={`
                w-3/4
                xs:w-3/4
                sm:w-2/3
                md:w-1/2
              `}
              href={sherpa.work.resume({})}
              target="_blank"
            >
              <ResumeSkeleton />
            </App.Link>
          </Center>
        </WorkPageSection.Container>
      </VStack>
    </App.PageSection>
    <App.PageFooter />
  </App.PageBody>
</WorkPage>
