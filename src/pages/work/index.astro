---

<AppPage>
  <AppPageHeader />

  <AppPageBody
    backgroundColor="bg-gray-100"
    class={`
      flex
      flex-col
      min-h-screen
    `}
  >
    <AppPageHero
      title="My Career"
      subtitle="When work is play, you'll never play another day in your life."
      class={`
        w-full
      `}
    />

    <AppPageSection
      class={`
        w-full
        py-12
        sm:py-16
        md:py-20
        space-y-32
      `}
    >
      <VStack
        class={`
          gap-8
        `}
      >
        <WorkSection>
          <WorkSectionTitle>Work Experience</WorkSectionTitle>
          {[
              chatbooksWorkExperience,
              slingTvWorkExperience,
              masterControlWorkExperience,
            ].map((job) => (
            <WorkExperienceCard {...job} />
          ))}
        </WorkSection>

        <WorkSection>
          <WorkSectionTitle>Projects</WorkSectionTitle>
          <WorkSectionGrid>
            {projects.map((project) => (
              <ProjectCard {...project} />
            ))}
          </WorkSectionGrid>
        </WorkSection>

        <VStack class="gap-16">
          <WorkSection>
            <WorkSectionTitle>Core Proficiencies</WorkSectionTitle>
            <WorkSectionGrid>
              {coreProficiencies.map((skill) => (
                <SkillCard {...skill} />
              ))}
            </WorkSectionGrid>
          </WorkSection>

          <WorkSection>
            <WorkSectionTitle>Technical Skills</WorkSectionTitle>
            <WorkSectionGrid>
              {skillCategories.map((category) => (
                <SkillCategoryCard {...category} />
              ))}
            </WorkSectionGrid>
          </WorkSection>
        </VStack>

        <WorkSection>
          <WorkSectionTitle>Resume</WorkSectionTitle>
          <Center>
            <AppLink
              class={`
                w-3/4
                xs:w-3/4
                sm:w-2/3
                md:w-1/2
              `}
              href={resumeUrl}
              target="_blank"
            >
              <ResumeSkeleton />
            </AppLink>
          </Center>
        </WorkSection>
      </VStack>

    </AppPageSection>

    <AppPageFooter />
  </AppPageBody>
</AppPage>