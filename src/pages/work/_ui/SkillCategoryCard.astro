---
import { Box, H3 } from '../../../lib/ui';

interface Props {
  category: string;
  skills: string[];
  icon: string;
  class?: string;
}

const { category, skills, icon, class: className } = Astro.props;
---

<Box
  class:list={[
    'bg-white rounded-lg shadow-md p-6 space-y-4 hover:shadow-lg transition-shadow',
    className,
  ]}
>
  <Box class="flex items-center space-x-4">
    <Box class="text-2xl text-gray-700">
      {icon}
    </Box>
    <H3 class="text-lg font-semibold text-gray-900">
      {category}
    </H3>
  </Box>

  <Box class="flex flex-wrap gap-2">
    {
      skills.map(skill => (
        <Box class="bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-full">{skill}</Box>
      ))
    }
  </Box>
</Box>
