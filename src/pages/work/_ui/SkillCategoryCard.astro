---
import UI from "../../../lib/ui";

interface Props {
  category: string;
  skills: string[];
  icon: string;
  class?: string;
}

const { category, skills, icon, class: className } = Astro.props;
---

<UI.Layout.Box class:list={[
  "bg-white rounded-lg shadow-md p-6 space-y-4 hover:shadow-lg transition-shadow",
  className
]}>
  <UI.Layout.Box class="flex items-center space-x-4">
    <UI.Layout.Box class="text-2xl text-gray-700">
      {icon}
    </UI.Layout.Box>
    <UI.Typography.H3 class="text-lg font-semibold text-gray-900">
      {category}
    </UI.Typography.H3>
  </UI.Layout.Box>
  
  <UI.Layout.Box class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <UI.Layout.Box class="bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-full">
        {skill}
      </UI.Layout.Box>
    ))}
  </UI.Layout.Box>
</UI.Layout.Box> 