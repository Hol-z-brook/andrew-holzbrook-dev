---
import UI from "../../../lib/ui";

interface Props {
  name: string;
  icon: string;
  description: string;
  class?: string;
}

const { name, icon, description, class: className } = Astro.props;
---

<UI.Layout.Box class:list={[
  "bg-white rounded-lg shadow-md p-6 space-y-4 hover:shadow-lg transition-shadow",
  className
]}>
  <UI.Layout.Box class="flex items-center space-x-4">
    <UI.Layout.Box class="text-2xl text-gray-700">
      {icon}
    </UI.Layout.Box>
    <UI.Typography.H3 class="text-lg font-semibold text-gray-900">
      {name}
    </UI.Typography.H3>
  </UI.Layout.Box>
  
  <UI.Typography.P class="text-gray-700">
    {description}
  </UI.Typography.P>
</UI.Layout.Box> 