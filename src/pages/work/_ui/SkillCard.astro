---
import { Box, H3, P } from '../../../lib/ui';

interface Props {
  name: string;
  icon: string;
  description: string;
  class?: string;
}

const { name, icon, description, class: className } = Astro.props;
---

<Box
  class:list={[
    'bg-white rounded-lg shadow-md p-6 space-y-4 hover:shadow-lg transition-shadow',
    className,
  ]}
>
  <Box class="flex items-center space-x-4">
    <Box class="text-2xl text-gray-700">
      {icon}
    </Box>
    <H3 class="text-lg font-semibold text-gray-900">
      {name}
    </H3>
  </Box>

  <P class="text-gray-700">
    {description}
  </P>
</Box>
