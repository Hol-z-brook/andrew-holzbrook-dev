---
interface Props {
  category: string;
  skills: string[];
  icon: string;
  class?: string;
}

const { category, skills, icon, class: className = '' } = Astro.props;
---

<div class={`
  bg-white
  rounded-lg
  shadow-md
  p-6
  space-y-4
  ${className}
`}>
  <div class="flex items-center space-x-4">
    <span class={`
      text-2xl
      text-gray-700
    `}>
      {icon}
    </span>
    <h3 class={`
      text-lg
      font-semibold
      text-gray-900
    `}>
      {category}
    </h3>
  </div>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class={`
        bg-gray-100
        text-gray-700
        text-sm
        px-3
        py-1
        rounded-full
      `}>
        {skill}
      </span>
    ))}
  </div>
</div>
