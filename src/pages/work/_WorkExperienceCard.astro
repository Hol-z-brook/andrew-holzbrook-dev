---
interface Props {
  company: string;
  role: string;
  period: string;
  description: string;
  class?: string;
}

const { company, role, period, description, class: className = '' } = Astro.props;
---

<div class={`
  bg-white
  rounded-lg
  shadow-md
  p-6
  space-y-3
  ${className}
`}>
  <h3 class={`
    text-lg
    font-semibold
    text-gray-900
  `}>{company}</h3>
  <p class={`
    text-gray-600
    font-medium
  `}>{role}</p>
  <p class={`
    text-sm
    text-gray-500
  `}>{period}</p>
  <p class={`
    text-gray-700
  `}>{description}</p>
</div>
