---
import * as App from "../../lib/app/index.astro";

interface Props {
  href: string;
  class?: string;
}

const { href, class: className, ...rest } = Astro.props;
---

<App.Link
  href={href}
  class={`px-6 py-3 text-white rounded-lg shadow-lg transition-colors duration-300 ${className ?? ''}`}
  {...rest}
>
  <slot />
</App.Link> 