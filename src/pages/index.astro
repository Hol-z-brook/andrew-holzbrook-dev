---
import * as App from "../lib/app/index.astro";
import { makeSherpa } from "../lib/sherpa/Sherpa";
import Box from "../lib/ui/Box.astro";
import Stack from "../lib/ui/Stack.astro";
import { HomeExploreCard } from "../pages/_HomeExploreCard/_index.astro";

const sherpa = makeSherpa();

const workSection = {
  title: "Work",
  description:
    "A journey through my professional experienceâ€”projects, skills, and collaborations that shaped my career.",
  link: sherpa.work.index({}),
  bgColor: "bg-orange-100",
  cta: "Explore Career",
  ctaClass: "bg-orange-500 hover:bg-orange-600",
};

const familySection = {
  title: "Family",
  description:
    "Family is at the heart of everything I do. Discover the routines, habits, and moments that keep us growing together.",
  link: sherpa.family.index({}),
  bgColor: "bg-amber-100",
  cta: "Meet the Family",
  ctaClass: "bg-amber-500 hover:bg-amber-600",
};

const playSection = {
  title: "Play",
  description:
    "Exploring creativity through board games, tech experiments, and hobbies that bring joy and balance to life.",
  link: sherpa.play.index({}),
  bgColor: "bg-red-100",
  cta: "See What I'm Playing",
  ctaClass: "bg-rose-500 hover:bg-rose-600",
};
---

<App.Page>
  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <App.PageHero
      title="Andrew Hol(z)brook"
      subtitle="Building systems that simplify life. Exploring how family, play, and a touch of AI make everything better."
    />

    <!-- Work, Family, Play in a Row on Large Screens -->
    <Box as="section" class="py-12">
      <Stack
        direction="row"
        class="max-w-6xl mx-auto px-6 lg:space-x-8 space-y-8 lg:space-y-0"
      >
        <!-- Work Section -->
        <HomeExploreCard.Container bgColor={workSection.bgColor}>
          <HomeExploreCard.Title>
            {workSection.title}
          </HomeExploreCard.Title>
          <HomeExploreCard.Blurb>
            {workSection.description}
          </HomeExploreCard.Blurb>
          <HomeExploreCard.Cta href={workSection.link} class={workSection.ctaClass}>
            {workSection.cta}
          </HomeExploreCard.Cta>
        </HomeExploreCard.Container>

        <!-- Family Section -->
        <HomeExploreCard.Container bgColor={familySection.bgColor}>
          <HomeExploreCard.Title>
            {familySection.title}
          </HomeExploreCard.Title>
          <HomeExploreCard.Blurb>
            {familySection.description}
          </HomeExploreCard.Blurb>
          <HomeExploreCard.Cta href={familySection.link} class={familySection.ctaClass}>
            {familySection.cta}
          </HomeExploreCard.Cta>
        </HomeExploreCard.Container>

        <!-- Play Section -->
        <HomeExploreCard.Container bgColor={playSection.bgColor}>
          <HomeExploreCard.Title>
            {playSection.title}
          </HomeExploreCard.Title>
          <HomeExploreCard.Blurb>
            {playSection.description}
          </HomeExploreCard.Blurb>
          <HomeExploreCard.Cta href={playSection.link} class={playSection.ctaClass}>
            {playSection.cta}
          </HomeExploreCard.Cta>
        </HomeExploreCard.Container>
      </Stack>
    </Box>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
