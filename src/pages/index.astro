---
import App from '../lib/app';
import Sherpa from '../lib/sherpa';
import { PageHero } from '../lib/ui';
import PageUI from './_ui';

const sherpa = Sherpa.makeSherpa();

const workSection = {
  title: 'Work',
  description:
    'A journey through my professional experienceâ€”projects, skills, and collaborations that shaped my career.',
  link: sherpa.work.index({}),
  bgColor: 'bg-orange-100',
  cta: 'Explore Career',
  ctaClass: 'bg-orange-500 hover:bg-orange-600',
};

const familySection = {
  title: 'Family',
  description:
    'Family is at the heart of everything I do. Discover the routines, habits, and moments that keep us growing together.',
  link: sherpa.family.index({}),
  bgColor: 'bg-amber-100',
  cta: 'Meet the Family',
  ctaClass: 'bg-amber-500 hover:bg-amber-600',
};

const playSection = {
  title: 'Play',
  description:
    'Exploring creativity through board games, tech experiments, and hobbies that bring joy and balance to life.',
  link: sherpa.play.index({}),
  bgColor: 'bg-red-100',
  cta: "See What I'm Playing",
  ctaClass: 'bg-rose-500 hover:bg-rose-600',
};
---

<App.Page>
  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero
      title="Andrew Hol(z)brook"
      subtitle="Building systems that simplify life. Exploring how family, play, and a touch of AI make everything better."
    />

    <!-- Work, Family, Play in a Row on Large Screens -->
    <section class="py-12">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Work Section -->
          <PageUI.ExploreCard.Container bgColor={workSection.bgColor}>
            <PageUI.ExploreCard.Title>
              {workSection.title}
            </PageUI.ExploreCard.Title>
            <PageUI.ExploreCard.Blurb>
              {workSection.description}
            </PageUI.ExploreCard.Blurb>
            <PageUI.ExploreCard.Cta href={workSection.link} class={workSection.ctaClass}>
              {workSection.cta}
            </PageUI.ExploreCard.Cta>
          </PageUI.ExploreCard.Container>

          <!-- Family Section -->
          <PageUI.ExploreCard.Container bgColor={familySection.bgColor}>
            <PageUI.ExploreCard.Title>
              {familySection.title}
            </PageUI.ExploreCard.Title>
            <PageUI.ExploreCard.Blurb>
              {familySection.description}
            </PageUI.ExploreCard.Blurb>
            <PageUI.ExploreCard.Cta href={familySection.link} class={familySection.ctaClass}>
              {familySection.cta}
            </PageUI.ExploreCard.Cta>
          </PageUI.ExploreCard.Container>

          <!-- Play Section -->
          <PageUI.ExploreCard.Container bgColor={playSection.bgColor}>
            <PageUI.ExploreCard.Title>
              {playSection.title}
            </PageUI.ExploreCard.Title>
            <PageUI.ExploreCard.Blurb>
              {playSection.description}
            </PageUI.ExploreCard.Blurb>
            <PageUI.ExploreCard.Cta href={playSection.link} class={playSection.ctaClass}>
              {playSection.cta}
            </PageUI.ExploreCard.Cta>
          </PageUI.ExploreCard.Container>
        </div>
      </div>
    </section>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
