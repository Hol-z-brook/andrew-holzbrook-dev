---
import { ExploreCard, PageHero } from '../lib/ui';
import App from '../lib/app';
import { homePageData } from './_/home.data';
---

<App.Page>
  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero title={homePageData.title} subtitle={homePageData.subtitle} />

    <section class="py-12">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <ExploreCard.Container bgColor={homePageData.sections.work.bgColor}>
            <ExploreCard.Title>
              {homePageData.sections.work.title}
            </ExploreCard.Title>
            <ExploreCard.Blurb>
              {homePageData.sections.work.description}
            </ExploreCard.Blurb>
            <ExploreCard.Cta
              href={homePageData.sections.work.link}
              class={homePageData.sections.work.ctaClass}
            >
              {homePageData.sections.work.cta}
            </ExploreCard.Cta>
          </ExploreCard.Container>

          <ExploreCard.Container bgColor={homePageData.sections.family.bgColor}>
            <ExploreCard.Title>
              {homePageData.sections.family.title}
            </ExploreCard.Title>
            <ExploreCard.Blurb>
              {homePageData.sections.family.description}
            </ExploreCard.Blurb>
            <ExploreCard.Cta
              href={homePageData.sections.family.link}
              class={homePageData.sections.family.ctaClass}
            >
              {homePageData.sections.family.cta}
            </ExploreCard.Cta>
          </ExploreCard.Container>

          <ExploreCard.Container bgColor={homePageData.sections.play.bgColor}>
            <ExploreCard.Title>
              {homePageData.sections.play.title}
            </ExploreCard.Title>
            <ExploreCard.Blurb>
              {homePageData.sections.play.description}
            </ExploreCard.Blurb>
            <ExploreCard.Cta
              href={homePageData.sections.play.link}
              class={homePageData.sections.play.ctaClass}
            >
              {homePageData.sections.play.cta}
            </ExploreCard.Cta>
          </ExploreCard.Container>
        </div>
      </div>
    </section>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
