---
import * as App from "./_app/_index.astro";
import { makeSherpa } from "./_sherpa/_Sherpa";
import Box from "../lib/ui/Box.astro";
import H2 from "../lib/ui/H2.astro";
import P from "../lib/ui/P.astro";
import Stack from "../lib/ui/Stack.astro";

const sherpa = makeSherpa();

const workSection = {
  title: "Work",
  description:
    "A journey through my professional experienceâ€”projects, skills, and collaborations that shaped my career.",
  link: sherpa.work.index({}),
  bgColor: "bg-orange-100",
  cta: "Explore Career",
};

const familySection = {
  title: "Family",
  description:
    "Family is at the heart of everything I do. Discover the routines, habits, and moments that keep us growing together.",
  link: sherpa.family.index({}),
  bgColor: "bg-amber-100",
  cta: "Meet the Family",
};

const playSection = {
  title: "Play",
  description:
    "Exploring creativity through board games, tech experiments, and hobbies that bring joy and balance to life.",
  link: sherpa.play.index({}),
  bgColor: "bg-red-100",
  cta: "See What I'm Playing",
};
---

<App.Page>
  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <App.PageHero
      title="Andrew Hol(z)brook"
      subtitle="Building systems that simplify life. Exploring how family, play, and a touch of AI make everything better."
    />

    <!-- Work, Family, Play in a Row on Large Screens -->
    <Box as="section" class="py-12">
      <Stack
        direction="row"
        class="max-w-6xl mx-auto px-6 lg:space-x-8 space-y-8 lg:space-y-0"
      >
        <!-- Work Section -->
        <Box
          class={`flex-1 p-8 rounded-2xl shadow-lg ${workSection.bgColor} text-center`}
        >
          <H2 class="text-3xl mb-4">
            {workSection.title}
          </H2>
          <P class="text-lg mb-8">
            {workSection.description}
          </P>
          <App.Link
            href={workSection.link}
            class="px-6 py-3 bg-orange-500 hover:bg-orange-600 text-white rounded-lg shadow-lg transition-colors duration-300"
          >
            {workSection.cta}
          </App.Link>
        </Box>

        <!-- Family Section -->
        <Box
          class={`flex-1 p-8 rounded-2xl shadow-lg ${familySection.bgColor} text-center`}
        >
          <H2 class="text-3xl mb-4">
            {familySection.title}
          </H2>
          <P class="text-lg mb-8">
            {familySection.description}
          </P>
          <App.Link
            href={familySection.link}
            class="px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white rounded-lg shadow-lg transition-colors duration-300"
          >
            {familySection.cta}
          </App.Link>
        </Box>

        <!-- Play Section -->
        <Box
          class={`flex-1 p-8 rounded-2xl shadow-lg ${playSection.bgColor} text-center`}
        >
          <H2 class="text-3xl mb-4">
            {playSection.title}
          </H2>
          <P class="text-lg mb-8">
            {playSection.description}
          </P>
          <App.Link
            href={playSection.link}
            class="px-6 py-3 bg-rose-500 hover:bg-rose-600 text-white rounded-lg shadow-lg transition-colors duration-300"
          >
            {playSection.cta}
          </App.Link>
        </Box>
      </Stack>
    </Box>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
