---
import App from "../lib/app";
import Sherpa from "../lib/sherpa";
import UI from "../lib/ui";
import HomePage from "./_components/HomePage";

const sherpa = Sherpa.makeSherpa();

const workSection = {
  title: "Work",
  description:
    "A journey through my professional experienceâ€”projects, skills, and collaborations that shaped my career.",
  link: sherpa.work.index({}),
  bgColor: "bg-orange-100",
  cta: "Explore Career",
  ctaClass: "bg-orange-500 hover:bg-orange-600",
};

const familySection = {
  title: "Family",
  description:
    "Family is at the heart of everything I do. Discover the routines, habits, and moments that keep us growing together.",
  link: sherpa.family.index({}),
  bgColor: "bg-amber-100",
  cta: "Meet the Family",
  ctaClass: "bg-amber-500 hover:bg-amber-600",
};

const playSection = {
  title: "Play",
  description:
    "Exploring creativity through board games, tech experiments, and hobbies that bring joy and balance to life.",
  link: sherpa.play.index({}),
  bgColor: "bg-red-100",
  cta: "See What I'm Playing",
  ctaClass: "bg-rose-500 hover:bg-rose-600",
};
---

<App.Page>
  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <App.PageHero
      title="Andrew Hol(z)brook"
      subtitle="Building systems that simplify life. Exploring how family, play, and a touch of AI make everything better."
    />

    <!-- Work, Family, Play in a Row on Large Screens -->
    <UI.Layout.Box as="section" class="py-12">
      <UI.Layout.Stack
        direction="row"
        class="max-w-6xl mx-auto px-6 lg:space-x-8 space-y-8 lg:space-y-0"
      >
        <!-- Work Section -->
        <HomePage.ExploreCard.Container bgColor={workSection.bgColor}>
          <HomePage.ExploreCard.Title>
            {workSection.title}
          </HomePage.ExploreCard.Title>
          <HomePage.ExploreCard.Blurb>
            {workSection.description}
          </HomePage.ExploreCard.Blurb>
          <HomePage.ExploreCard.Cta href={workSection.link} class={workSection.ctaClass}>
            {workSection.cta}
          </HomePage.ExploreCard.Cta>
        </HomePage.ExploreCard.Container>

        <!-- Family Section -->
        <HomePage.ExploreCard.Container bgColor={familySection.bgColor}>
          <HomePage.ExploreCard.Title>
            {familySection.title}
          </HomePage.ExploreCard.Title>
          <HomePage.ExploreCard.Blurb>
            {familySection.description}
          </HomePage.ExploreCard.Blurb>
          <HomePage.ExploreCard.Cta href={familySection.link} class={familySection.ctaClass}>
            {familySection.cta}
          </HomePage.ExploreCard.Cta>
        </HomePage.ExploreCard.Container>

        <!-- Play Section -->
        <HomePage.ExploreCard.Container bgColor={playSection.bgColor}>
          <HomePage.ExploreCard.Title>
            {playSection.title}
          </HomePage.ExploreCard.Title>
          <HomePage.ExploreCard.Blurb>
            {playSection.description}
          </HomePage.ExploreCard.Blurb>
          <HomePage.ExploreCard.Cta href={playSection.link} class={playSection.ctaClass}>
            {playSection.cta}
          </HomePage.ExploreCard.Cta>
        </HomePage.ExploreCard.Container>
      </UI.Layout.Stack>
    </UI.Layout.Box>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
