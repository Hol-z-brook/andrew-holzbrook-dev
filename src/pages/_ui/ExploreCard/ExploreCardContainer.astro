---
import UI from "../../../lib/ui";

interface Props {
  bgColor: string;
  class?: string;
}

const { bgColor, class: className, ...rest } = Astro.props;
---

<UI.Layout.Box
  class={`flex-1 p-8 rounded-2xl shadow-lg ${bgColor} text-center ${className ?? ''}`}
  {...rest}
>
  <slot />
</UI.Layout.Box> 