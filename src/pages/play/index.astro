---
import App from '../../lib/app';
import { PageHero } from '../../lib/ui';
import { pageData } from './_/data';
---

<App.Page>
  <App.PageHeader />

  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero title={pageData.title} subtitle={pageData.subtitle} />

    <App.PageSection>
      <div class="space-y-12">
        {
          pageData.hobbies.map(hobby => (
            <section class="bg-white rounded-2xl shadow-md p-8">
              <div class="flex items-center gap-4 mb-6">
                <span class="text-4xl">{hobby.icon}</span>
                <div>
                  <h2 class="text-2xl font-bold text-gray-800">{hobby.name}</h2>
                  <p class="text-lg text-gray-600">{hobby.description}</p>
                </div>
              </div>

              {hobby.content.sections.map(section => (
                <div class="space-y-6">
                  {section.title && (
                    <h3 class="text-xl font-semibold text-gray-700">{section.title}</h3>
                  )}
                  {section.content.map(paragraph => (
                    <p class="text-lg text-gray-700">{paragraph}</p>
                  ))}
                </div>
              ))}
            </section>
          ))
        }
      </div>
    </App.PageSection>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
