---
import App from '../../lib/app';
import { PageHero } from '../../lib/ui';
import { playPageData } from './_/play.data';
---

<App.Page>
  <App.PageHeader />

  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero title={playPageData.title} subtitle={playPageData.subtitle} />

    <App.PageSection>
      {
        playPageData.introduction && (
          <div class="max-w-4xl mx-auto mb-16 text-center">
            {playPageData.introduction.map(paragraph => (
              <p class="text-xl text-gray-700 mb-4 leading-relaxed">{paragraph}</p>
            ))}
          </div>
        )
      }

      <div class="space-y-16">
        {
          playPageData.hobbies.map(hobby => (
            <section class="bg-white rounded-2xl shadow-md p-8 lg:p-12">
              <div class="flex items-start gap-6 mb-8">
                <span class="text-5xl">{hobby.icon}</span>
                <div>
                  <h2 class="text-3xl font-bold text-gray-800 mb-2">{hobby.name}</h2>
                  <p class="text-xl text-gray-600">{hobby.description}</p>
                  {hobby.startedYear && (
                    <p class="text-sm text-gray-500 mt-1">Since {hobby.startedYear}</p>
                  )}
                </div>
              </div>

              <div class="space-y-10">
                {hobby.content.sections.map(section => (
                  <div class="space-y-4">
                    {section.title && (
                      <h3 class="text-2xl font-semibold text-gray-800">{section.title}</h3>
                    )}
                    {section.content.map(paragraph => (
                      <p class="text-lg text-gray-700 leading-relaxed">{paragraph}</p>
                    ))}
                  </div>
                ))}
              </div>

              {hobby.favoriteThings && (
                <div class="mt-12 pt-8 border-t border-gray-100">
                  <h4 class="text-lg font-semibold text-gray-800 mb-4">Favorites</h4>
                  <ul class="space-y-2">
                    {hobby.favoriteThings.map(thing => (
                      <li class="flex items-center gap-2">
                        <span class="text-amber-500">â˜…</span>
                        <span class="text-gray-700">{thing}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </section>
          ))
        }
      </div>
    </App.PageSection>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
