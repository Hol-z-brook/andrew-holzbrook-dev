---
import App from '../../lib/app';
import { Card, PageHero } from '../../lib/ui';
import { pageData } from './_/data';
---

<App.Page>
  <App.PageHeader />

  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero title={pageData.title} subtitle={pageData.subtitle} />

    <App.PageSection>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          pageData.hobbies.map(hobby => (
            <App.Link href={hobby.href} class="block">
              <Card class="shadow-lg hover:shadow-2xl transition-shadow duration-300">
                <h2 class="text-xl font-semibold text-gray-800">{hobby.name}</h2>
              </Card>
            </App.Link>
          ))
        }
      </div>
    </App.PageSection>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
