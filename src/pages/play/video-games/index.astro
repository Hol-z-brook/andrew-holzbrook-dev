---
import * as App from "../../../lib/app/index.astro";
import { makeSherpa } from "../../../lib/sherpa/Sherpa";
import Breadcrumb from "../../../lib/ui/Breadcrumb.astro";
import Breadcrumbs from "../../../lib/ui/Breadcrumbs.astro";

const sherpa = makeSherpa();
---

<App.Page>
  <App.PageHeader />
  <App.PageBody class="flex flex-col min-h-screen bg-gray-100">
    <App.PageHero
      title="Video Games"
      subtitle="The Last of Us, Subnautica, God of War, and More!"
    />

    <Breadcrumbs>
      <Breadcrumb label="Play" href={sherpa.play.index({})} />
      <Breadcrumb label="Video Games" />
    </Breadcrumbs>

    <section class="max-w-4xl mx-auto p-6 mt-12 bg-white rounded-2xl shadow-md">
      <h2 class="text-2xl lg:text-3xl font-bold mb-6 text-gray-800">
        Video Games
      </h2>
      <p class="text-lg text-gray-700 mb-4">
        I've been playing video games since I was a child. My PokeMon cartridge
        on the original GameBoy was the Blue version with Blastoise on the
        cartridge artwork.
      </p>
    </section>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
