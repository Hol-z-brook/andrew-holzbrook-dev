---
import App from '../../lib/app';
import { PageHero, VStack } from '../../lib/ui';
import FamilyMemberCard from './_/FamilyMemberCard.astro';
import { familyMembers, pageTitle, pageSubtitle } from './_/data';
---

<App.Page>
  <App.PageHeader />

  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero title={pageTitle} subtitle={pageSubtitle} />

    <App.PageSection>
      <VStack class="space-y-6">
        {familyMembers.map(familyMember => <FamilyMemberCard member={familyMember} />)}
      </VStack>
    </App.PageSection>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
