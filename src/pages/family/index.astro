---
import App from '../../_/app';
import { PageHero, VStack } from '../../lib/ui';
import FamilyMemberCard from './_/FamilyMemberCard.astro';
import { pageData } from './_/data';
---

<App.Page>
  <App.PageHeader />

  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero title={pageData.title} subtitle={pageData.subtitle} />

    <App.PageSection>
      <VStack class="space-y-6">
        {pageData.familyMembers.map(familyMember => <FamilyMemberCard member={familyMember} />)}
      </VStack>
    </App.PageSection>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
