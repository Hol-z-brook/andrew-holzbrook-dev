---
import FamilyMemberListItem from './FamilyMemberListItem.astro';
import UI from '../../../lib/ui';

import { familyMembers } from './_familyMembers/_familyMembers';

interface Props {
  class?: string;
}

const { class: className }: Props = Astro.props;
---

<UI.Layout.Flex.VStack class={`grid grid-cols-2 gap-4 ${className}`}>
  {
    familyMembers.map(familyMember => (
      <FamilyMemberListItem class={`m-2`} familyMember={familyMember} />
    ))
  }
</UI.Layout.Flex.VStack>
