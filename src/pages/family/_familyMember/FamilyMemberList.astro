---
import FamilyMemberListItem from "./FamilyMemberListItem.astro";

import VStack from "../../../lib/ui/VStack.astro";
import { familyMembers } from "./_familyMembers/_familyMembers";

interface Props {
  class?: string;
}

const props: Props = Astro.props;
---

<VStack class=`grid grid-cols-2 gap-4 ${props.class}`>
  {
    familyMembers.map((familyMember) => (
      <FamilyMemberListItem
        class={`m-2`}
        familyMember={familyMember}
      />
    ))
  }
</VStack>
