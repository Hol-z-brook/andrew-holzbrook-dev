---
import * as ThemePage from "./_ThemePage/_index.astro";
import * as ThemeSection from "./_ThemeSection/_index.astro";
import * as App from "../_app/_index.astro";
import Box from "../../lib/ui/Box.astro";
import H4 from "../../lib/ui/H4.astro";
import theme from "../../theme";

const sections = [
  { id: 'spacing-scale', label: 'Spacing Scale' },
  { id: 'usage-examples', label: 'Usage Examples' }
];
---

<App.Page>
  <App.PageHeader />
  <App.PageBody class="bg-gray-50">
    <App.PageSection>
      <Box class="max-w-[90rem] mx-auto py-16 px-6">
        <ThemePage.Header>
          <ThemePage.BackLink />
          <ThemePage.Title>Spacing</ThemePage.Title>
          <ThemePage.Description>
            A consistent spacing system helps create harmonious layouts and maintain visual rhythm throughout the interface.
          </ThemePage.Description>
        </ThemePage.Header>

        <ThemePage.Nav>
          <ThemePage.NavTitle slot="title">Spacing</ThemePage.NavTitle>
          {sections.map(({ id, label }) => (
            <ThemePage.NavItem href={`#${id}`} label={label} />
          ))}
        </ThemePage.Nav>

        <Box class="space-y-24">
          <!-- Spacing Scale -->
          <ThemeSection.Section id="spacing-scale">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">
                Spacing Scale
              </ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                Our spacing scale provides consistent increments for margins, padding, and layout composition.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body class="space-y-8">
              {Object.entries(theme.spacing).map(([name, space]) => (
                <Box class="group flex items-center gap-12 p-4 rounded-lg hover:bg-white hover:shadow-sm transition-all cursor-pointer">
                  <Box class="w-32">
                    <Box class="text-base font-medium text-gray-900">{name}</Box>
                    <Box class="text-sm text-gray-500 font-mono mt-1">{space}</Box>
                  </Box>
                  <Box class="flex-1 flex items-center gap-4">
                    <Box 
                      class="bg-gradient-to-r from-primary-100 to-primary-200 rounded h-12 transition-all group-hover:from-primary-200 group-hover:to-primary-300"
                      style={`width: ${space}`}
                    />
                    <Box class="text-sm text-gray-500 group-hover:text-primary-600 transition-colors">
                      {space}
                    </Box>
                  </Box>
                </Box>
              ))}
            </ThemeSection.Body>
          </ThemeSection.Section>

          <!-- Usage Examples -->
          <ThemeSection.Section id="usage-examples">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">
                Usage Examples
              </ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                Common patterns and examples of how to apply spacing in your layouts.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body>
              <Box class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Component Spacing -->
                <Box class="space-y-8">
                  <H4 class="text-2xl font-medium">Component Spacing</H4>
                  <Box class="space-y-8">
                    <!-- Button Example -->
                    <Box class="p-6 bg-white rounded-lg border border-gray-200">
                      <Box class="font-medium text-lg mb-4">Button Padding</Box>
                      <Box class="flex gap-4">
                        <button class="px-2 py-1 bg-primary-500 text-white rounded text-sm">
                          spacing-2
                        </button>
                        <button class="px-4 py-2 bg-primary-500 text-white rounded">
                          spacing-4
                        </button>
                        <button class="px-6 py-3 bg-primary-500 text-white rounded text-lg">
                          spacing-6
                        </button>
                      </Box>
                    </Box>

                    <!-- Stack Example -->
                    <Box class="p-6 bg-white rounded-lg border border-gray-200">
                      <Box class="font-medium text-lg mb-4">Vertical Stack</Box>
                      <Box class="space-y-4 bg-gray-50 p-4 rounded">
                        <Box class="p-4 bg-primary-100 rounded">Item 1</Box>
                        <Box class="p-4 bg-primary-100 rounded">Item 2</Box>
                        <Box class="p-4 bg-primary-100 rounded">Item 3</Box>
                      </Box>
                    </Box>
                  </Box>
                </Box>

                <!-- Layout Spacing -->
                <Box class="space-y-8">
                  <H4 class="text-2xl font-medium">Layout Spacing</H4>
                  <Box class="space-y-8">
                    <!-- Grid Example -->
                    <Box class="p-6 bg-white rounded-lg border border-gray-200">
                      <Box class="font-medium text-lg mb-4">Grid Gap</Box>
                      <Box class="grid grid-cols-2 gap-4 bg-gray-50 p-4 rounded">
                        <Box class="p-4 bg-primary-100 rounded text-center">1</Box>
                        <Box class="p-4 bg-primary-100 rounded text-center">2</Box>
                        <Box class="p-4 bg-primary-100 rounded text-center">3</Box>
                        <Box class="p-4 bg-primary-100 rounded text-center">4</Box>
                      </Box>
                    </Box>

                    <!-- Section Example -->
                    <Box class="p-6 bg-white rounded-lg border border-gray-200">
                      <Box class="font-medium text-lg mb-4">Section Spacing</Box>
                      <Box class="space-y-8 bg-gray-50 p-4 rounded">
                        <Box class="space-y-2">
                          <Box class="font-medium">Header</Box>
                          <Box class="h-8 bg-primary-100 rounded w-3/4" />
                        </Box>
                        <Box class="space-y-2">
                          <Box class="font-medium">Content</Box>
                          <Box class="h-24 bg-primary-100 rounded" />
                        </Box>
                        <Box class="space-y-2">
                          <Box class="font-medium">Footer</Box>
                          <Box class="h-12 bg-primary-100 rounded" />
                        </Box>
                      </Box>
                    </Box>
                  </Box>
                </Box>
              </Box>
            </ThemeSection.Body>
          </ThemeSection.Section>
        </Box>
      </Box>
    </App.PageSection>
  </App.PageBody>
</App.Page> 