---
import A from "../../../lib/ui/A.astro";
import Li from "../../../lib/ui/Li.astro";

interface Props {
  href: string;
  label: string;
  class?: string;
}

const { href, label, class: className = "" } = Astro.props;
---

<Li>
  <A
    {href}
    class={`block pl-4 py-1.5 text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors text-sm ${className}`}
  >
    {label}
  </A>
</Li> 