---
import * as ThemePage from './_ThemePage/_index.astro';
import * as ThemeSection from './_ThemeSection/_index.astro';
import App from '../../lib/app';
import { H4 } from '../../lib/ui';
import theme from '../../theme';

const sections = [
  { id: 'shadow-scale', label: 'Shadow Scale' },
  { id: 'usage-guidelines', label: 'Usage Guidelines' },
];
---

<App.Page>
  <App.PageHeader />
  <App.PageBody class="bg-gray-50">
    <App.PageSection>
      <div class="max-w-[90rem] mx-auto py-16 px-6">
        <ThemePage.Header>
          <ThemePage.BackLink />
          <ThemePage.Title>Shadows</ThemePage.Title>
          <ThemePage.Description>
            Our shadow system creates depth and elevation in the interface, helping users understand
            hierarchy and focus.
          </ThemePage.Description>
        </ThemePage.Header>

        <ThemePage.Nav>
          <ThemePage.NavTitle slot="title">Shadows</ThemePage.NavTitle>
          {sections.map(({ id, label }) => <ThemePage.NavItem href={`#${id}`} label={label} />)}
        </ThemePage.Nav>

        <div class="space-y-24">
          <!-- Shadow Scale -->
          <ThemeSection.Section id="shadow-scale">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">Shadow Scale</ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                A range of shadow intensities to create depth and elevation in the interface.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-16">
              {
                Object.entries(theme.shadows).map(([name, shadow]) => (
                  <div class="space-y-4 group">
                    <div
                      class="relative aspect-square bg-white rounded-lg transition-all duration-300 hover:-translate-y-2"
                      style={`div-shadow: ${shadow}`}
                    >
                      <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center bg-black/20 backdrop-blur-sm text-white font-medium rounded-lg">
                        <div class="text-center">
                          <div class="text-lg font-semibold">Shadow Value</div>
                        </div>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <div class="text-base font-medium capitalize">{name}</div>
                      <div class="text-sm text-gray-500 font-mono break-words">{shadow}</div>
                    </div>
                  </div>
                ))
              }
            </ThemeSection.Body>
          </ThemeSection.Section>

          <!-- Usage Guidelines -->
          <ThemeSection.Section id="usage-guidelines">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">Usage Guidelines</ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                Best practices for using shadows to create meaningful elevation hierarchy.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Cards & Containers -->
                <div class="space-y-8">
                  <H4 class="text-2xl font-medium">Cards & Containers</H4>
                  <div class="space-y-8">
                    <div
                      class="p-6 bg-white rounded-lg transition-all duration-300 hover:-translate-y-1"
                      style={`div-shadow: ${theme.shadows.sm}`}
                    >
                      <div class="font-medium text-lg mb-2">Low Elevation (sm)</div>
                      <div class="text-gray-600">
                        Use for subtle depth in card layouts and containers that need minimal
                        elevation. Perfect for list items and secondary content.
                      </div>
                    </div>
                    <div
                      class="p-6 bg-white rounded-lg transition-all duration-300 hover:-translate-y-1"
                      style={`div-shadow: ${theme.shadows.md}`}
                    >
                      <div class="font-medium text-lg mb-2">Medium Elevation (md)</div>
                      <div class="text-gray-600">
                        Ideal for floating elements like popovers, dropdowns, and focused content.
                        Creates clear separation from the background.
                      </div>
                    </div>
                    <div
                      class="p-6 bg-white rounded-lg transition-all duration-300 hover:-translate-y-1"
                      style={`div-shadow: ${theme.shadows.xl}`}
                    >
                      <div class="font-medium text-lg mb-2">High Elevation (xl)</div>
                      <div class="text-gray-600">
                        Reserved for modals, important overlays, and critical UI elements. Creates
                        maximum contrast and focus.
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Interactive Elements -->
                <div class="space-y-8">
                  <H4 class="text-2xl font-medium">Interactive Elements</H4>
                  <div class="space-y-8">
                    <div
                      class="w-full p-6 bg-white rounded-lg cursor-pointer transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
                      style={`div-shadow: ${theme.shadows.sm}`}
                    >
                      <div class="font-medium text-lg mb-2">Hover Interaction</div>
                      <div class="text-gray-600">
                        Elements can increase their shadow on hover to indicate interactivity.
                        Combined with a subtle lift effect for enhanced feedback.
                      </div>
                    </div>
                    <div
                      class="w-full p-6 bg-white rounded-lg cursor-pointer transition-all duration-300 active:shadow-sm active:translate-y-0"
                      style={`div-shadow: ${theme.shadows.lg}`}
                    >
                      <div class="font-medium text-lg mb-2">Active State</div>
                      <div class="text-gray-600">
                        Clicking can temporarily reduce the shadow to create a pressing effect.
                        Returns to original state when released.
                      </div>
                    </div>
                    <div class="relative">
                      <div
                        class="w-full p-6 bg-white rounded-lg"
                        style={`div-shadow: ${theme.shadows.xl}`}
                      >
                        <div class="font-medium text-lg mb-2">Layered Shadows</div>
                        <div class="text-gray-600">
                          Multiple elements can be layered with different shadow intensities to
                          create complex depth hierarchies.
                        </div>
                      </div>
                      <div
                        class="absolute -bottom-4 -right-4 w-24 h-24 bg-primary-100 rounded-lg -z-10"
                        style={`div-shadow: ${theme.shadows.md}`}
                      >
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </ThemeSection.Body>
          </ThemeSection.Section>
        </div>
      </div>
    </App.PageSection>
  </App.PageBody>
</App.Page>
