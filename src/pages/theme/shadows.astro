---
import ThemePageBackLink from "./_ui/_ThemePageBackLink.astro";
import ThemePageTitle from "./_ui/_ThemePageTitle.astro";
import ThemePageDescription from "./_ui/_ThemePageDescription.astro";
import ThemePageHeader from "./_ui/_ThemePageHeader.astro";
import AppPage from "../_app/_AppPage.astro";
import AppPageBody from "../_app/_AppPageBody.astro";
import AppPageHeader from "../_app/_AppPageHeader.astro";
import AppPageSection from "../_app/_AppPageSection.astro";
import ThemeSection from "../../components/theme/ThemeSection.astro";
import ThemeSectionHeader from "../../components/theme/ThemeSectionHeader.astro";
import ThemeSectionBody from "../../components/theme/ThemeSectionBody.astro";
import ThemeSectionHeaderTitle from "../../components/theme/ThemeSectionHeaderTitle.astro";
import ThemeSectionHeaderBody from "../../components/theme/ThemeSectionHeaderBody.astro";
import Box from "../../lib/ui/Box.astro";
import Nav from "../../lib/ui/Nav.astro";
import Ul from "../../lib/ui/Ul.astro";
import Li from "../../lib/ui/Li.astro";
import A from "../../lib/ui/A.astro";
import H4 from "../../lib/ui/H4.astro";
import { theme } from "../../theme";

const sections = [
  { id: 'shadow-scale', label: 'Shadow Scale' },
  { id: 'usage-guidelines', label: 'Usage Guidelines' }
];
---

<AppPage>
  <AppPageHeader />
  <AppPageBody class="bg-gray-50">
    <AppPageSection>
      <Box class="max-w-[90rem] mx-auto py-16 px-6">
        <ThemePageHeader>
          <ThemePageBackLink />
          <ThemePageTitle>Shadows</ThemePageTitle>
          <ThemePageDescription>
            Our shadow system creates depth and elevation in the interface, helping users understand hierarchy and focus.
          </ThemePageDescription>
        </ThemePageHeader>

        <!-- Navigation -->
        <Nav class="mb-16">
          <Ul class="flex flex-col gap-2">
            <Li>
              <Box class="px-4 py-2 text-gray-900 font-medium">Shadows</Box>
              <Ul class="ml-4 mt-1 border-l border-gray-200 space-y-1">
                {sections.map(({ id, label }) => (
                  <Li>
                    <A
                      href={`#${id}`}
                      class="block pl-4 py-1.5 text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors text-sm"
                    >
                      {label}
                    </A>
                  </Li>
                ))}
              </Ul>
            </Li>
          </Ul>
        </Nav>

        <Box class="space-y-24">
          <!-- Shadow Scale -->
          <ThemeSection id="shadow-scale">
            <ThemeSectionHeader>
              <ThemeSectionHeaderTitle slot="title">
                Shadow Scale
              </ThemeSectionHeaderTitle>
              <ThemeSectionHeaderBody slot="body">
                A range of shadow intensities to create depth and elevation in the interface.
              </ThemeSectionHeaderBody>
            </ThemeSectionHeader>
            <ThemeSectionBody class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-16">
              {Object.entries(theme.shadows).map(([name, shadow]) => (
                <Box class="space-y-4 group">
                  <Box 
                    class="relative aspect-square bg-white rounded-lg transition-all duration-300 hover:-translate-y-2"
                    style={`box-shadow: ${shadow}`}
                  >
                    <Box 
                      class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center bg-black/20 backdrop-blur-sm text-white font-medium rounded-lg"
                    >
                      <Box class="text-center">
                        <Box class="text-lg font-semibold">Shadow Value</Box>
                      </Box>
                    </Box>
                  </Box>
                  <Box class="space-y-2">
                    <Box class="text-base font-medium capitalize">{name}</Box>
                    <Box class="text-sm text-gray-500 font-mono break-words">{shadow}</Box>
                  </Box>
                </Box>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Usage Guidelines -->
          <ThemeSection id="usage-guidelines">
            <ThemeSectionHeader>
              <ThemeSectionHeaderTitle slot="title">
                Usage Guidelines
              </ThemeSectionHeaderTitle>
              <ThemeSectionHeaderBody slot="body">
                Best practices for using shadows to create meaningful elevation hierarchy.
              </ThemeSectionHeaderBody>
            </ThemeSectionHeader>
            <ThemeSectionBody>
              <Box class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Cards & Containers -->
                <Box class="space-y-8">
                  <H4 class="text-2xl font-medium">Cards & Containers</H4>
                  <Box class="space-y-8">
                    <Box 
                      class="p-6 bg-white rounded-lg transition-all duration-300 hover:-translate-y-1" 
                      style={`box-shadow: ${theme.shadows.sm}`}
                    >
                      <Box class="font-medium text-lg mb-2">Low Elevation (sm)</Box>
                      <Box class="text-gray-600">
                        Use for subtle depth in card layouts and containers that need minimal elevation.
                        Perfect for list items and secondary content.
                      </Box>
                    </Box>
                    <Box 
                      class="p-6 bg-white rounded-lg transition-all duration-300 hover:-translate-y-1" 
                      style={`box-shadow: ${theme.shadows.md}`}
                    >
                      <Box class="font-medium text-lg mb-2">Medium Elevation (md)</Box>
                      <Box class="text-gray-600">
                        Ideal for floating elements like popovers, dropdowns, and focused content.
                        Creates clear separation from the background.
                      </Box>
                    </Box>
                    <Box 
                      class="p-6 bg-white rounded-lg transition-all duration-300 hover:-translate-y-1" 
                      style={`box-shadow: ${theme.shadows.xl}`}
                    >
                      <Box class="font-medium text-lg mb-2">High Elevation (xl)</Box>
                      <Box class="text-gray-600">
                        Reserved for modals, important overlays, and critical UI elements.
                        Creates maximum contrast and focus.
                      </Box>
                    </Box>
                  </Box>
                </Box>

                <!-- Interactive Elements -->
                <Box class="space-y-8">
                  <H4 class="text-2xl font-medium">Interactive Elements</H4>
                  <Box class="space-y-8">
                    <Box 
                      class="w-full p-6 bg-white rounded-lg cursor-pointer transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
                      style={`box-shadow: ${theme.shadows.sm}`}
                    >
                      <Box class="font-medium text-lg mb-2">Hover Interaction</Box>
                      <Box class="text-gray-600">
                        Elements can increase their shadow on hover to indicate interactivity.
                        Combined with a subtle lift effect for enhanced feedback.
                      </Box>
                    </Box>
                    <Box 
                      class="w-full p-6 bg-white rounded-lg cursor-pointer transition-all duration-300 active:shadow-sm active:translate-y-0"
                      style={`box-shadow: ${theme.shadows.lg}`}
                    >
                      <Box class="font-medium text-lg mb-2">Active State</Box>
                      <Box class="text-gray-600">
                        Clicking can temporarily reduce the shadow to create a pressing effect.
                        Returns to original state when released.
                      </Box>
                    </Box>
                    <Box class="relative">
                      <Box 
                        class="w-full p-6 bg-white rounded-lg"
                        style={`box-shadow: ${theme.shadows.xl}`}
                      >
                        <Box class="font-medium text-lg mb-2">Layered Shadows</Box>
                        <Box class="text-gray-600">
                          Multiple elements can be layered with different shadow intensities
                          to create complex depth hierarchies.
                        </Box>
                      </Box>
                      <Box 
                        class="absolute -bottom-4 -right-4 w-24 h-24 bg-primary-100 rounded-lg -z-10"
                        style={`box-shadow: ${theme.shadows.md}`}
                      />
                    </Box>
                  </Box>
                </Box>
              </Box>
            </ThemeSectionBody>
          </ThemeSection>
        </Box>
      </Box>
    </AppPageSection>
  </AppPageBody>
</AppPage> 