---
import AppPage from "../_app/_AppPage.astro";
import AppPageBody from "../_app/_AppPageBody.astro";
import AppPageHeader from "../_app/_AppPageHeader.astro";
import AppPageSection from "../_app/_AppPageSection.astro";
import ThemeSection from "../../components/theme/ThemeSection.astro";
import ThemeSectionHeader from "../../components/theme/ThemeSectionHeader.astro";
import ThemeSectionBody from "../../components/theme/ThemeSectionBody.astro";
import { theme } from "../../theme";
import BackLink from "../../lib/ui/BackLink.astro";

import { makeSherpa } from "../_sherpa/_Sherpa";

const sherpa = makeSherpa();

const sections = [
  { id: 'shadow-scale', label: 'Shadow Scale' },
  { id: 'usage-guidelines', label: 'Usage Guidelines' }
];
---

<AppPage>
  <AppPageHeader />
  <AppPageBody class="bg-gray-50">
    <AppPageSection>
      <div class="max-w-[90rem] mx-auto py-16 px-6">
        <!-- Header -->
        <div class="mb-16">
          <BackLink href={sherpa.theme.index()} class="mb-4">Back to Pickles UI</BackLink>
          <h1 class="text-5xl font-bold mb-6">Shadows</h1>
          <p class="text-xl text-gray-600 max-w-3xl">
            Our shadow system creates depth and elevation in the interface, helping users understand hierarchy and focus.
          </p>
        </div>

        <!-- Navigation -->
        <nav class="mb-16">
          <ul class="flex flex-col gap-2">
            <li>
              <div class="px-4 py-2 text-gray-900 font-medium">Shadows</div>
              <ul class="ml-4 mt-1 border-l border-gray-200 space-y-1">
                {sections.map(({ id, label }) => (
                  <li>
                    <a
                      href={`#${id}`}
                      class="block pl-4 py-1.5 text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors text-sm"
                    >
                      {label}
                    </a>
                  </li>
                ))}
              </ul>
            </li>
          </ul>
        </nav>

        <div class="space-y-24">
          <!-- Shadow Scale -->
          <ThemeSection id="shadow-scale">
            <ThemeSectionHeader title="Shadow Scale">
              <p class="text-lg text-gray-600 mt-4">
                A range of shadow intensities to create depth and elevation in the interface.
              </p>
            </ThemeSectionHeader>
            <ThemeSectionBody class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-16">
              {Object.entries(theme.shadows).map(([name, shadow]) => (
                <div class="space-y-4">
                  <div 
                    class="h-40 bg-white rounded-lg"
                    style={`box-shadow: ${shadow}`}
                  />
                  <div class="text-base font-medium">{name}</div>
                  <div class="text-sm text-gray-500 font-mono break-words">{shadow}</div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Usage Guidelines -->
          <ThemeSection id="usage-guidelines">
            <ThemeSectionHeader title="Usage Guidelines">
              <p class="text-lg text-gray-600 mt-4">
                Best practices for using shadows to create meaningful elevation hierarchy.
              </p>
            </ThemeSectionHeader>
            <ThemeSectionBody>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <div class="space-y-6">
                  <h4 class="text-xl font-medium">Cards & Containers</h4>
                  <div class="space-y-8">
                    <div class="p-6 bg-white rounded-lg" style={`box-shadow: ${theme.shadows.sm}`}>
                      <div class="font-medium mb-2">Low Elevation (sm)</div>
                      <p class="text-gray-600">Use for subtle depth in card layouts</p>
                    </div>
                    <div class="p-6 bg-white rounded-lg" style={`box-shadow: ${theme.shadows.md}`}>
                      <div class="font-medium mb-2">Medium Elevation (md)</div>
                      <p class="text-gray-600">Use for floating elements like popovers</p>
                    </div>
                    <div class="p-6 bg-white rounded-lg" style={`box-shadow: ${theme.shadows.xl}`}>
                      <div class="font-medium mb-2">High Elevation (xl)</div>
                      <p class="text-gray-600">Use for modals and important overlays</p>
                    </div>
                  </div>
                </div>
                <div class="space-y-6">
                  <h4 class="text-xl font-medium">Interactive Elements</h4>
                  <div class="space-y-8">
                    <button class="w-full p-4 bg-white rounded-lg text-left hover:shadow-md transition-shadow duration-200">
                      <div class="font-medium mb-1">Hover Shadow</div>
                      <p class="text-sm text-gray-600">Shadow appears on hover</p>
                    </button>
                    <div class="p-4 bg-white rounded-lg shadow-lg transform hover:-translate-y-1 transition-all duration-200">
                      <div class="font-medium mb-1">Elevation + Transform</div>
                      <p class="text-sm text-gray-600">Combined with subtle lift effect</p>
                    </div>
                  </div>
                </div>
              </div>
            </ThemeSectionBody>
          </ThemeSection>
        </div>
      </div>
    </AppPageSection>
  </AppPageBody>
</AppPage> 