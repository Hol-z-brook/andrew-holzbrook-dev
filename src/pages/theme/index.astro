---
import App from '../../lib/app';
import Sherpa from '../../lib/sherpa';
import {
  GradientBackground,
  H2,
  P,
  PageHeader,
  PageHeaderBody,
  PageHeaderSubtitle,
  PageHeaderTitle,
} from '../../lib/ui';

interface ThemePage {
  id: string;
  title: string;
  description: string;
  href: string;
  icon: string;
  gradient: string;
}

const sherpa = Sherpa.makeSherpa();

const themePages: ThemePage[] = [
  {
    id: 'colors',
    title: 'Colors',
    description: 'Color scales, base colors, and gradients.',
    href: sherpa.theme.colors(),
    icon: 'üé®',
    gradient: 'from-rose-500 to-orange-500',
  },
  {
    id: 'typography',
    title: 'Typography',
    description: 'Font sizes, weights, and text styles.',
    href: sherpa.theme.typography(),
    icon: '‚úçÔ∏è',
    gradient: 'from-blue-500 to-purple-500',
  },
  {
    id: 'spacing',
    title: 'Spacing',
    description: 'Margins, padding, and layout spacing.',
    href: sherpa.theme.spacing(),
    icon: 'üìè',
    gradient: 'from-green-500 to-teal-500',
  },
  {
    id: 'border-radius',
    title: 'Border Radius',
    description: 'Corner radius values for components.',
    href: sherpa.theme.borderRadius(),
    icon: '‚ö™',
    gradient: 'from-amber-500 to-yellow-500',
  },
  {
    id: 'shadows',
    title: 'Shadows',
    description: 'Elevation and depth effects.',
    href: sherpa.theme.shadows(),
    icon: 'üåó',
    gradient: 'from-indigo-500 to-blue-500',
  },
  {
    id: 'transitions',
    title: 'Transitions',
    description: 'Motion and animation timings.',
    href: sherpa.theme.transitions(),
    icon: '‚ú®',
    gradient: 'from-purple-500 to-pink-500',
  },
];
---

<App.Page>
  <App.PageHeader />
  <App.PageBody class="bg-gray-50">
    <App.PageSection>
      <div class="max-w-5xl mx-auto py-16 px-6">
        <PageHeader>
          <PageHeaderTitle>Pickles UI</PageHeaderTitle>
          <PageHeaderSubtitle>An opinionated design system</PageHeaderSubtitle>
          <PageHeaderBody>
            Because great design isn't made by committee. These are the strong opinions and careful
            decisions that shape holzbrook.dev into what it is ‚Äî with a dash of whimsy.
          </PageHeaderBody>
        </PageHeader>

        <!-- Theme Navigation -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            themePages.map(({ title, description, href, icon, gradient }) => (
              <App.Link
                href={href}
                class="group relative overflow-hidden p-6 bg-white rounded-xl border border-gray-200 hover:border-transparent hover:shadow-lg transition-all duration-300"
              >
                <GradientBackground gradient={gradient} />

                <div class="relative">
                  <div class="text-3xl mb-4 transform group-hover:scale-110 transition-transform duration-300">
                    {icon}
                  </div>
                  <H2 class="text-xl font-semibold mb-2 text-gray-900 group-hover:text-primary-600 transition-colors">
                    {title}
                  </H2>
                  <P>{description}</P>
                </div>
              </App.Link>
            ))
          }
        </div>
      </div>
    </App.PageSection>
  </App.PageBody>
</App.Page>
