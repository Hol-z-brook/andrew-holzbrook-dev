---
import * as ThemePage from "./_ThemePage/_index.astro";
import * as ThemeSection from "./_ThemeSection/_index.astro";
import App from "../../lib/app";
import Box from "../../lib/ui/Box.astro";
import H4 from "../../lib/ui/H4.astro";
import theme from "../../theme";

const sections = [
  { id: 'timing-scale', label: 'Timing Scale' },
  { id: 'animation-examples', label: 'Animation Examples' }
];
---

<App.Page>
  <App.PageHeader />
  <App.PageBody class="bg-gray-50">
    <App.PageSection>
      <Box class="max-w-[90rem] mx-auto py-16 px-6">
        <ThemePage.Header>
          <ThemePage.BackLink />
          <ThemePage.Title>Transitions</ThemePage.Title>
          <ThemePage.Description>
            Our transition system provides consistent motion and animation timing to create smooth and delightful interactions.
          </ThemePage.Description>
        </ThemePage.Header>

        <ThemePage.Nav>
          <ThemePage.NavTitle slot="title">Transitions</ThemePage.NavTitle>
          {sections.map(({ id, label }) => (
            <ThemePage.NavItem href={`#${id}`} label={label} />
          ))}
        </ThemePage.Nav>

        <Box class="space-y-24">
          <!-- Timing Scale -->
          <ThemeSection.Section id="timing-scale">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">
                Timing Scale
              </ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                Different transition durations and easing functions for various types of animations.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body class="grid grid-cols-1 lg:grid-cols-3 xl:grid-cols-4 gap-16">
              {Object.entries(theme.transitions).map(([name, transition]) => (
                <Box class="space-y-4 group">
                  <Box class="relative">
                    <Box 
                      class="w-full h-32 bg-gradient-to-br from-primary-100 to-primary-300 rounded-lg cursor-pointer hover:scale-105 hover:shadow-lg"
                      style={`transition: all ${transition}`}
                    >
                      <Box class="absolute inset-0 flex items-center justify-center text-primary-700 font-medium opacity-0 group-hover:opacity-100" style={`transition: opacity ${transition}`}>
                        Try Me!
                      </Box>
                    </Box>
                  </Box>
                  <Box class="space-y-2">
                    <Box class="text-base font-medium capitalize">{name}</Box>
                    <Box class="text-sm text-gray-500 font-mono break-words group-hover:text-primary-600 transition-colors cursor-pointer">
                      {transition}
                    </Box>
                  </Box>
                </Box>
              ))}
            </ThemeSection.Body>
          </ThemeSection.Section>

          <!-- Animation Examples -->
          <ThemeSection.Section id="animation-examples">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">
                Animation Examples
              </ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                Common interaction patterns using our transition timing scale.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body>
              <Box class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Basic Transitions -->
                <Box class="space-y-8">
                  <H4 class="text-2xl font-medium">Basic Transitions</H4>
                  <Box class="space-y-8">
                    <!-- Color Transition -->
                    <Box class="p-6 bg-white rounded-lg border border-gray-200">
                      <Box class="font-medium text-lg mb-4">Color Changes</Box>
                      <Box class="space-y-4">
                        <Box 
                          class="p-4 bg-primary-100 hover:bg-primary-200 rounded text-center cursor-pointer"
                          style={`transition: background-color ${theme.transitions.default}`}
                        >
                          Background Color
                        </Box>
                        <Box 
                          class="p-4 border border-primary-200 hover:border-primary-400 rounded text-center cursor-pointer"
                          style={`transition: border-color ${theme.transitions.default}`}
                        >
                          Border Color
                        </Box>
                        <Box 
                          class="p-4 text-gray-600 hover:text-primary-600 rounded text-center cursor-pointer"
                          style={`transition: color ${theme.transitions.default}`}
                        >
                          Text Color
                        </Box>
                      </Box>
                    </Box>

                    <!-- Opacity & Visibility -->
                    <Box class="p-6 bg-white rounded-lg border border-gray-200">
                      <Box class="font-medium text-lg mb-4">Opacity & Visibility</Box>
                      <Box class="space-y-4">
                        <Box class="relative h-16 bg-gray-50 rounded">
                          <Box 
                            class="absolute inset-0 bg-primary-100 opacity-0 hover:opacity-100 flex items-center justify-center cursor-pointer"
                            style={`transition: opacity ${theme.transitions.default}`}
                          >
                            Fade In
                          </Box>
                        </Box>
                        <Box class="h-16 bg-primary-100 hover:opacity-50 rounded flex items-center justify-center cursor-pointer" style={`transition: opacity ${theme.transitions.default}`}>
                          Fade Out
                        </Box>
                      </Box>
                    </Box>
                  </Box>
                </Box>

                <!-- Advanced Transitions -->
                <Box class="space-y-8">
                  <H4 class="text-2xl font-medium">Advanced Transitions</H4>
                  <Box class="space-y-8">
                    <!-- Transform Effects -->
                    <Box class="p-6 bg-white rounded-lg border border-gray-200">
                      <Box class="font-medium text-lg mb-4">Transform Effects</Box>
                      <Box class="space-y-4">
                        <Box 
                          class="p-4 bg-primary-100 hover:scale-105 hover:rotate-1 rounded text-center cursor-pointer"
                          style={`transition: transform ${theme.transitions.delayed}`}
                        >
                          Scale & Rotate
                        </Box>
                        <Box 
                          class="p-4 bg-primary-100 hover:-translate-y-2 hover:shadow-lg rounded text-center cursor-pointer"
                          style={`transition: all ${theme.transitions.default}`}
                        >
                          Translate & Shadow
                        </Box>
                        <Box 
                          class="p-4 bg-primary-100 hover:skew-x-6 rounded text-center cursor-pointer"
                          style={`transition: transform ${theme.transitions.delayed}`}
                        >
                          Skew Transform
                        </Box>
                        <Box 
                          class="p-4 bg-primary-100 hover:scale-110 rounded text-center cursor-pointer"
                          style={`transition: transform ${theme.transitions.bounce}`}
                        >
                          Bounce Scale
                        </Box>
                      </Box>
                    </Box>

                    <!-- Combined Effects -->
                    <Box class="p-6 bg-white rounded-lg border border-gray-200">
                      <Box class="font-medium text-lg mb-4">Combined Effects</Box>
                      <Box class="space-y-4">
                        <Box 
                          class="group p-4 bg-primary-100 rounded text-center cursor-pointer hover:bg-primary-200 hover:scale-[1.02]"
                          style={`transition: all ${theme.transitions.delayed}`}
                        >
                          <Box class="text-primary-700 group-hover:translate-x-2" style={`transition: transform ${theme.transitions.delayed}`}>
                            Multi-element â†’
                          </Box>
                        </Box>
                        <Box class="relative h-16 bg-primary-100 rounded overflow-hidden cursor-pointer group">
                          <Box 
                            class="absolute inset-0 flex items-center justify-center"
                            style={`transition: transform ${theme.transitions.delayed}`}
                          >
                            Hover Me
                          </Box>
                          <Box 
                            class="absolute inset-0 bg-primary-200 flex items-center justify-center translate-y-full group-hover:translate-y-0"
                            style={`transition: transform ${theme.transitions.delayed}`}
                          >
                            Slide Up Effect
                          </Box>
                        </Box>
                      </Box>
                    </Box>
                  </Box>
                </Box>
              </Box>
            </ThemeSection.Body>
          </ThemeSection.Section>
        </Box>
      </Box>
    </App.PageSection>
  </App.PageBody>
</App.Page> 