---
import AppPage from "../_app/_AppPage.astro";
import AppPageBody from "../_app/_AppPageBody.astro";
import AppPageHeader from "../_app/_AppPageHeader.astro";
import AppPageSection from "../_app/_AppPageSection.astro";
import ThemeSection from "../../components/theme/ThemeSection.astro";
import ThemeSectionHeader from "../../components/theme/ThemeSectionHeader.astro";
import ThemeSectionBody from "../../components/theme/ThemeSectionBody.astro";
import { theme } from "../../theme";

const sections = [
  { id: 'timing-scale', label: 'Timing Scale' },
  { id: 'animation-examples', label: 'Animation Examples' }
];
---

<AppPage>
  <AppPageHeader />
  <AppPageBody class="bg-gray-50">
    <AppPageSection>
      <div class="max-w-[90rem] mx-auto py-16 px-6">
        <!-- Header -->
        <div class="mb-16">
          <a href="/theme" class="text-primary-600 hover:text-primary-700 mb-4 inline-block">&larr; Back to Design System</a>
          <h1 class="text-5xl font-bold mb-6">Transitions</h1>
          <p class="text-xl text-gray-600 max-w-3xl">
            Our transition system provides consistent motion and animation timing to create smooth and delightful interactions.
          </p>
        </div>

        <!-- Navigation -->
        <nav class="mb-16">
          <ul class="flex flex-col gap-2">
            <li>
              <div class="px-4 py-2 text-gray-900 font-medium">Transitions</div>
              <ul class="ml-4 mt-1 border-l border-gray-200 space-y-1">
                {sections.map(({ id, label }) => (
                  <li>
                    <a
                      href={`#${id}`}
                      class="block pl-4 py-1.5 text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-md transition-colors text-sm"
                    >
                      {label}
                    </a>
                  </li>
                ))}
              </ul>
            </li>
          </ul>
        </nav>

        <div class="space-y-24">
          <!-- Timing Scale -->
          <ThemeSection id="timing-scale">
            <ThemeSectionHeader title="Timing Scale">
              <p class="text-lg text-gray-600 mt-4">
                Different transition durations and easing functions for various types of animations.
              </p>
            </ThemeSectionHeader>
            <ThemeSectionBody class="grid grid-cols-1 lg:grid-cols-3 xl:grid-cols-4 gap-16">
              {Object.entries(theme.transitions).map(([name, transition]) => (
                <div class="space-y-4">
                  <button 
                    class="w-full py-6 px-8 bg-primary-200 rounded-lg hover:scale-105"
                    style={`transition: transform ${transition}`}
                  >
                    Hover me
                  </button>
                  <div class="text-base font-medium">{name}</div>
                  <div class="text-sm text-gray-500 font-mono break-words">{transition}</div>
                </div>
              ))}
            </ThemeSectionBody>
          </ThemeSection>

          <!-- Animation Examples -->
          <ThemeSection id="animation-examples">
            <ThemeSectionHeader title="Animation Examples">
              <p class="text-lg text-gray-600 mt-4">
                Common interaction patterns using our transition timing scale.
              </p>
            </ThemeSectionHeader>
            <ThemeSectionBody>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <div class="space-y-6">
                  <h4 class="text-xl font-medium">Color & Opacity</h4>
                  <div class="space-y-8">
                    <button class="w-full p-4 bg-primary-100 hover:bg-primary-200 rounded-lg text-left transition-colors" style={`transition-duration: ${theme.transitions.base}`}>
                      <div class="font-medium mb-1">Background Color</div>
                      <p class="text-sm text-gray-600">Smooth color transition on hover</p>
                    </button>
                    <button class="w-full p-4 bg-white rounded-lg text-left group" style={`transition-duration: ${theme.transitions.smooth}`}>
                      <div class="font-medium mb-1">Opacity Change</div>
                      <p class="text-sm text-gray-600 group-hover:opacity-50 transition-opacity">Text fades on hover</p>
                    </button>
                  </div>
                </div>
                <div class="space-y-6">
                  <h4 class="text-xl font-medium">Transform Effects</h4>
                  <div class="space-y-8">
                    <button class="w-full p-4 bg-white rounded-lg text-left shadow hover:-translate-y-1 hover:shadow-lg" style={`transition: transform ${theme.transitions.smooth}, box-shadow ${theme.transitions.smooth}`}>
                      <div class="font-medium mb-1">Lift Effect</div>
                      <p class="text-sm text-gray-600">Combined transform and shadow</p>
                    </button>
                    <button class="w-full p-4 bg-white rounded-lg text-left hover:scale-[1.02] origin-left" style={`transition: transform ${theme.transitions.slow}`}>
                      <div class="font-medium mb-1">Scale from Left</div>
                      <p class="text-sm text-gray-600">Subtle scale with origin point</p>
                    </button>
                  </div>
                </div>
              </div>
            </ThemeSectionBody>
          </ThemeSection>
        </div>
      </div>
    </AppPageSection>
  </AppPageBody>
</AppPage> 