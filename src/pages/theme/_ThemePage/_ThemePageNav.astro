---
import UI from '../../../lib/ui';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<UI.Layout.Box class={`mb-16 ${className}`}>
  <UI.Layout.Box class="mb-4">
    <slot name="title" />
  </UI.Layout.Box>
  <UI.Layout.Box class="space-y-2">
    <slot />
  </UI.Layout.Box>
</UI.Layout.Box>

